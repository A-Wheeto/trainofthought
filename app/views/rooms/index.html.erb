<div class="row">
  <div class="col-md-2">
    <h5> Hi <%= @current_user.username %> </h5>
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>
  <div class="col-md-10 bg-dark text-light">
    <% if @current_room %>
      <h4 class="text-center"> <%= @current_room.name %> </h4>
      <%= turbo_stream_from @current_room %>
    <div id="messages">
    </div>
    <%= render partial: 'layouts/new_message' %>
    <% end %>
  </div>
</div>

<br><br>
<%= link_to 'Sign Out', destroy_user_session_path %>